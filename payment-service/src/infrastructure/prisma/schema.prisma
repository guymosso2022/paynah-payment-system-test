generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Payment {
  id               String   @id @default(uuid()) @db.Uuid
  sourceAccountId   String   @db.VarChar() @map("source_account_id")
  targetAccountId   String   @db.VarChar() @map("target_account_id")
  amount           Int
  currency         String?    @db.VarChar()
  status           String   @db.VarChar()
  createdAt        DateTime? @default(now())
  updatedAt        DateTime? @updatedAt
  @@map("payment")
}